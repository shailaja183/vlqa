{
  "dataset": "coco",
  "data_root": "X_COCO", //Please replace this with the actual corresponding folder

  "image_feature_type": "vqa_fix_100",
  "image_screening_parameters": null,

  "num_workers": 4,
  "val_workers": 2,

  "expand_coco": true,
  "exclude_minival": true,
  
  "max_seq_length": 128,
  "bert_model_name": "bert-base-uncased",
  "do_lower_case": true,
  "train_batch_size": 48,
  "eval_batch_size": 48,

  "pretraining": true,
  "masked_lm_prob": 0.15,
  "two_sentence": true,
  "no_next_sentence": false,
  "false_caption_ratio": 0.5,

  // Optimizer stuff
  "limit_trainset_size": -1,
  "patience": 3,
  "learning_rate": 5e-5,
  "num_train_epochs":  10,
  "warmup_proportion": 0.1,
  "grad_norm": 1.0,
  "gradient_accumulation_steps": 1,

  "restore_bin":  null,  //Specify which model to initialize from
  
  "model":
  {
    "type": "VisualBERTFixedImageEmbedding",
    "special_visual_initialize": true,
    "training_head_type": "pretraining",
    "visual_embedding_dim": 2048
  }
}
