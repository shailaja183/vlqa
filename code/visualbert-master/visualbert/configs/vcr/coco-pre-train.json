//4xV100s needed
{
  "dataset": "coco",

  "data_root":"X_COCO", //Please replace this with the actual corresponding folder

  "expand_coco": true,
  "exclude_minival": true,

  "train_batch_size": 128,
  "eval_batch_size": 128,
  "use_detector": true,

  "image_feature_type": "r2c",

  "max_seq_length": 128,
  "bert_model_name": "bert-base-uncased",
  "do_lower_case": true,
  "pretraining": true,
  "masked_lm_prob": 0.15,

  "two_sentence": true,
  "no_next_sentence":false,
  "false_caption_ratio": 0.5,

  // Optimizer stuff
  "patience": 3,
  "learning_rate": 1e-4,
  "num_train_epochs":  10,
  "warmup_proportion": 0.1,
  "grad_norm": 1.0,
  "gradient_accumulation_steps": 1,

  "num_workers": 8,
  "val_workers": 4,

  "restore_bin":  null,  //Specify which model to initialize from

  "model": // Used for AllenNLP registed BERT model
  {
    "type": "VisualBERTDetector",
    "special_visual_initialize": true,
    "training_head_type": "pretraining",
    "visual_embedding_dim": 512
  }
}
